@model TeamRedInternalProject.ViewModel.PurchaseConfirmationVM

@{
    ViewData["Title"] = "PurchaseConfirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>You're going to Hello World Music Festival!</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Order ID
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderId)
        </dd>
        <dt class = "col-sm-2">
            Order Date
        </dt>
        
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName) 
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            Account Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderEmail)
        </dd>
        <dt class = "col-sm-2">
            Payment Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PayerEmail)
        </dd>
        <dt class = "col-sm-2">
            Tickets
        </dt>
        <dd class="col-sm-10">
        @foreach (var entry in Model.TicketTypes) 
        {
                <div class="flex flex-column">
                @Html.DisplayFor(modelItem => entry.Key) |
                Quantity: @Html.DisplayFor(modelItem => entry.Value)
                </div>
        }
        </dd>

    </dl>
</div>

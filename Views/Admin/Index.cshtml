@model IEnumerable<TeamRedInternalProject.ViewModel.TicketRevenueVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var purchasedTickets = (int)ViewData["PurchasedTickets"];
    var ticketRevenue = (decimal)ViewData["TicketRevenue"];

}

<h1>Admin Dashboard</h1>
<div class="d-flex gap-4">
  <div class="bg-white text-center py-4 flex-fill">
    <h2 class="text-black">@purchasedTickets</h2>
    <h4>Total Tickets Purchased</h4>
  </div>
  <div class="bg-white text-center py-4 flex-fill">
        <h2 class="text-black">@ticketRevenue.ToString("F2")</h2>
    <h4>Total Ticket Revenue</h4>
  </div>
</div>



<div>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    Ticket Name
                </th>
                <th>
                    Ticket Type
                </th>
                <th>
                    Revenue
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model){
                <tr>
                    <td>
                        @item.TicketName
                    </td>
                    <td>
                        @item.TicketsSold
                    </td>
                    <td>
                        @item.Revenue
                    </td>
                </tr>
            }
        </tbody>
    </table>

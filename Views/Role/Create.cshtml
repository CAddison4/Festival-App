@model TeamRedInternalProject.ViewModel.UserRoleVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Assign User Roles</h1>

<h4 class="text-center">User Role</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" class="main-form mx-auto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div class="form-group">
                <!-- This shows the label. -->
                <label asp-for="Email" class="control-label"></label>

                <!-- Drop down for List of strings with user selected. -->
                @Html.DropDownList("Email",
                new SelectList(ViewBag.UserSelectList, "Value"
                , "Text",
                ViewBag.SelectedUser), "Select User",
                new { @id = "userDD", @class = "form-control" })

                <!-- This shows validation for
                     dropdown of 'Email' property. -->
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="control-label"></label>

                <!-- Drop down for SelectList with
                    'Value' and 'Text' properties. -->
                @Html.DropDownList("Role",
                new SelectList(ViewBag.RoleSelectList, "Value", "Text"),
                "Select Role",
                new { @id = "roleDD", @class = "form-control" })

                <!-- This shows validation for
                     dropdown of 'Role' property. -->
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="w-100 btn btn-lg btn-primary">Assign</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
